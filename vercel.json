{
    "version": 2,
    "builds": [
      {
        "src": "**/*",
        "use": "@vercel/build"
      }
    ],
    "functions": {
      "api/**/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "routes": [
      { "src": "/", "dest": "/api/index.php" },
      { "src": "/about", "dest": "/api/about.php" },
      { "src": "/projects", "dest": "/api/projects.php" },
      { "src": "/experience", "dest": "/api/experience.php" },
      { "src": "/contact", "dest": "/api/contact.php" }
    ]
  }